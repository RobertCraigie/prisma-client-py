{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": ["databases/docker-compose.yml"],
  "packageRules": [
    {
        "groupName": "dev",
        "matchPaths": ["pipelines/requirements/**/*.txt", "databases/*.txt"],
        "excludePackageNames": ["mypy", "pytest-mypy-plugins"]
    },
    {
        "groupName": "mypy",
        "matchFiles": ["pipelines/requirements/mypy.txt"]
    },
    {
        "groupName": "actions",
        "matchPaths": [".github/workflows/**/*.yml"]
    },
    {
        "groupName": "lib",
        "matchPaths": ["requirements/*.txt"]
    }
  ]
}
